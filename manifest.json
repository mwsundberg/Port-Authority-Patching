{
  "description": "Note: You probably want to check out the original Port Authority instead. This is a fork made mainly for learning purposes. Blocks websites from using javascript to port scan your computer/network and dynamically blocks all LexisNexis endpoints from running their invasive data collection scripts.",
  "manifest_version": 2,
  "name": "Port Bauthority",
  "version": "1.2",
  "homepage_url": "https://github.com/mwsundberg/Port-Authority-Patching",
  "icons": {
    "48": "icons/logo-48.png",
    "96": "icons/logo-96.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "unlimitedStorage",
    "tabs",
    "notifications",
    "dns",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "BrowserStorageManager.js",
      "constants.js",
      "background.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/popup.html",
    "default_title": "Port Bauthority",
    "default_icon": {
      "16": "icons/logo-16.png",
      "32": "icons/logo-32.png"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{6c00218c-707a-4977-84cf-36df1cef310f}"
    }
  },

  "options_ui": {
    "page": "popup/settings.html"
  },

  "content_security_policy": "default-src 'self'; style-src 'self'"

}
